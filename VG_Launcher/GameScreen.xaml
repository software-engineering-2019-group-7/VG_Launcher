<Window x:Class="VG_Launcher.GameScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VG_Launcher"
        mc:Ignorable="d" Height="280" Width="540" ShowInTaskbar="False" WindowStartupLocation="Manual" ResizeMode="NoResize" Topmost="True" WindowStyle="None" MouseDown="Window_MouseDown" >
    <Grid Background="#FF0B2068">
        <Image x:Name="image" Width="540" Margin="-4,0,-4,-5"/>

        <Label x:Name="hoursLabel" Content="Play Time: " HorizontalAlignment="Left" Margin="33,189,0,0" VerticalAlignment="Top" Background="#00000000" Foreground="White" FontSize="20"/>
        <Button x:Name="settingsButton" Content="Game Settings" HorizontalAlignment="Left" Margin="420,196,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="playButton" Content="Play Game" HorizontalAlignment="Left" Margin="224,91,0,0" VerticalAlignment="Top" Width="60" Height="60"/>

    </Grid>
</Window>
